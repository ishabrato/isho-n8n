# Dockerfile
FROM n8nio/n8n:latest

USER root

# Install system dependencies
RUN apk update && apk add --no-cache \
    python3 \
    py3-pip \
    ffmpeg \
    curl \
    wget

# Install yt-dlp
RUN pip install --upgrade yt-dlp

# Switch back to n8n user
USER node

# Optional: Verify installations
RUN yt-dlp --version && ffmpeg -version